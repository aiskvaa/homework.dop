<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goju"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="165dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_Username"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:background="@drawable/oval1"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="7dp"
        android:hint="Username"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_Password"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:background="@drawable/oval2"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="7dp"
        android:hint="Password"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="@id/et_Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Username" />
    <EditText
        android:id="@+id/et_Email"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:background="@drawable/oval3"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="7dp"
        android:hint="Email"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="@id/et_Password"
        app:layout_constraintTop_toBottomOf="@+id/et_Password"
        />
    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="590dp"
        android:background="@drawable/oval4"
        android:backgroundTint="@color/purple_200"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:backgroundTint="@color/purple_500"
        android:src="@drawable/ic_check"
        app:layout_constraintBottom_toTopOf="@id/et_Email"
        app:layout_constraintLeft_toRightOf="@id/et_Password"
        app:layout_constraintRight_toRightOf="@id/et_Password"



        />


</androidx.constraintlayout.widget.ConstraintLayout>
